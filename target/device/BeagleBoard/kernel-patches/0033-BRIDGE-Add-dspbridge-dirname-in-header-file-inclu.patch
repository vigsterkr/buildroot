	j=$(basename $i)
	echo $j
	sed -i -e 's@<\('"$j"'\)>@<dspbridge/\1>@g' \
	drivers/dsp/bridge/*/*.[ch] \
	arch/arm/plat-omap/include/dspbridge/*.h
